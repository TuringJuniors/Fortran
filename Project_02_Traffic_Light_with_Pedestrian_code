class LED   
{
  public:
    int pin;            // LED's pin on arduino 
    void on();          // turn the led on
    void off();         // turn the led off
};
class BUTTON   
{
  public:
    int pin;           
    int push(); 
};


LED red_car, yellow_car, green_car, red_pedestrian, green_pedestrian, wait_pedestrian;
BUTTON Button;

void LED::on()
{
  digitalWrite(pin,HIGH);
}


void LED::off()
{
  digitalWrite(pin,LOW); 
}

int BUTTON::push()
{
  int value;
  value =  digitalRead(Button.pin);
  return value; 
}

//state car

#define car_move 0
#define car_ready_stop 1
#define car_stop 2
#define car_ready_move 3


int state = 0;



void setup()
{

red_car.pin = 13;
yellow_car.pin = 12;
green_car.pin = 10;
red_pedestrian.pin =  3;
green_pedestrian.pin =5;
wait_pedestrian.pin =4;

Button.pin=6;

pinMode(red_car.pin,OUTPUT);
pinMode(yellow_car.pin,OUTPUT);
pinMode(green_car.pin,OUTPUT);
pinMode(red_pedestrian.pin,OUTPUT);
pinMode(green_pedestrian.pin,OUTPUT);
pinMode(wait_pedestrian.pin,OUTPUT);
pinMode(Button.pin,INPUT);

}

void loop()
{



switch(state)
{
  case car_move:
    green_car.on();
    while(Button.push()!= 1)
      {
        red_pedestrian.on();
      }
    wait_pedestrian.on();
    delay(10000);
    green_car.off();
    state = car_ready_stop;
    break;
    
  case car_ready_stop:
    yellow_car.on();
    delay(5000);
    yellow_car.off();
    state = car_stop;
    break;
    
  case car_stop:
    red_car.on();
    red_pedestrian.off();
    wait_pedestrian.off();
    green_pedestrian.on();
    delay(10000);
    green_pedestrian.off();
    red_pedestrian.on();
    red_car.off();
    state = car_ready_move;
    break;
    
  case car_ready_move:
    yellow_car.on();
    delay(3000);
    yellow_car.off();
    state = car_move;
    break;
   
    


}


}